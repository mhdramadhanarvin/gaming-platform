{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "@gaming-platform/apps/api": [
        "apps/api/src/index.ts"
      ],
      "@gaming-platform/api/account-games": [
        "libs/api/account-games/src/index.ts"
      ],
      "@gaming-platform/api/auth": ["libs/api/auth/src/index.ts"],
      "@gaming-platform/api/decorators": [
        "libs/api/shared/decorators/src/index.ts"
      ],
      "@gaming-platform/api/games": ["libs/api/games/src/index.ts"],
      "@gaming-platform/api/plugins": ["libs/api/plugins/src/index.ts"],
      "@gaming-platform/api/shared/database/entity": [
        "libs/api/shared/database/entity/src/index.ts"
      ],
      "@gaming-platform/api/shared/validations": [
        "libs/api/shared/validations/src/index.ts"
      ],
      "@gaming-platform/api/users": ["libs/api/users/src/index.ts"],
      "@gaming-platform/error-handling": [
        "libs/api/error-handling/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
